<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/ic_action_back"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设置"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_save_config"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_check_black"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

    <ScrollView
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View style="@style/HorizontalLine"/>

            <LinearLayout style="@style/SettingItem">

                <View style="@style/VerticalLine"/>

                <TextView style="@style/SettingName"
                    android:text="版本号" />

                <View style="@style/VerticalLine"/>

                <TextView style="@style/SettingBody"
                    android:id="@+id/tv_version"
                    android:background="@color/white"
                    android:singleLine="true" />

                <View style="@style/VerticalLine"/>

            </LinearLayout>

            <View style="@style/HorizontalLine"/>

            <LinearLayout style="@style/SettingItem">

                <View style="@style/VerticalLine"/>

                <TextView style="@style/SettingName"
                    android:text="平台地址" />

                <View style="@style/VerticalLine"/>

                <EditText style="@style/SettingBody"
                    android:id="@+id/et_base_url"
                    android:background="@color/white"
                    android:singleLine="true" />

                <View style="@style/VerticalLine"/>

            </LinearLayout>

            <View style="@style/HorizontalLine"/>

            <LinearLayout style="@style/SettingItem"
                android:id="@+id/ll_host_certificate">

                <View style="@style/VerticalLine"/>

                <TextView style="@style/SettingName"
                    android:text="公司证书" />

                <View style="@style/VerticalLine"/>

                <EditText style="@style/SettingBody"
                    android:id="@+id/et_host_certificate"
                    android:background="@color/white"
                    android:singleLine="true" />

                <View style="@style/VerticalLine"/>

            </LinearLayout>

            <View style="@style/HorizontalLine"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>