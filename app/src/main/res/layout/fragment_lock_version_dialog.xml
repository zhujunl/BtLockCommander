<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="1dp"
    app:contentPadding="1dp"
    tools:context=".view.dialog.LockVersionDialogFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/textview_shape"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="联网锁信息查看"
                android:paddingStart="10dp"
                android:gravity="center|start"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_base_station"
                android:text="基站信息"
                android:textColor="@color/main_color"
                android:paddingEnd="20dp"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="锁硬件型号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_lock_hardware_version"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="锁固件型号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_lock_firmware_version"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="指纹模块硬件型号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_finger_hardware_version"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="指纹模块固件型号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_finger_firmware_version"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="NB模块版本号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_nb_version"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="NB模块IMEI号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_serial_number"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="SIM卡ICCID号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_imei"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="SIM卡IMSI号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_imsi"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/lock_version_dialog"
                android:text="NB信号强度"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_rssi"
                style="@style/lock_version_dialog"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>